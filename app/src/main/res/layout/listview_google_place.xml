<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/place_icon"
        android:layout_width="210dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/image_of_place"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/place_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/place_name"
        android:layout_alignRight="@+id/place_name"
        android:layout_below="@+id/place_name"
        android:layout_marginTop="8dp"
        android:gravity="end"
        android:text="@string/example"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        app:layout_constraintLeft_toLeftOf="@+id/place_types"
        app:layout_constraintRight_toRightOf="@+id/place_types"
        app:layout_constraintTop_toBottomOf="@+id/place_types"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/place_types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/place_address"
        android:layout_alignRight="@+id/place_address"
        android:layout_below="@+id/place_address"
        android:layout_marginTop="8dp"
        android:gravity="end"
        android:text="@string/example"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        app:layout_constraintLeft_toLeftOf="@+id/place_name"
        app:layout_constraintRight_toRightOf="@+id/place_name"
        app:layout_constraintTop_toBottomOf="@+id/place_name" />

    <TextView
        android:id="@+id/place_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:text="@string/example"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        app:layout_constraintBottom_toBottomOf="@+id/place_icon"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintLeft_toRightOf="@+id/place_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

</android.support.constraint.ConstraintLayout>